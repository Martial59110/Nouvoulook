---
import '../style/dons.css';

const response = await fetch(`${import.meta.env.API_URL}/history`);
const data = await response.json();
const history = data[0] || {};
const sections = history.sections || [];

const apiUrl = import.meta.env.PUBLIC_API_URL || 'http://localhost:3001';

// Couleurs pour les sections
const colors = ['#E23E57', '#FC4811', '#E09C2B', '#E23E57', '#FC4811', '#E09C2B'];
const icons = ['bi-book-half', 'bi-people-fill', 'bi-star-fill', 'bi-lightbulb-fill', 'bi-award-fill', 'bi-heart-fill'];

---

<section class="history-timeline-section py-5">
  <div class="container position-relative">
    <!-- Timeline verticale -->
    <div class="history-timeline-line d-none d-lg-block"></div>
    
    {sections.map((section: any, index: number) => {
      const isLeft = index % 2 === 0;
      const color = colors[index % colors.length];
      const icon = icons[index % icons.length];
      
      return (
        <div class={`row history-timeline-row mb-5 fade-in-scroll align-items-center ${isLeft ? '' : 'justify-content-end'}`}>
          {!isLeft && (
            <div class="col-lg-2 d-none d-lg-flex justify-content-end">
              <img 
                src={section.imageUrl?.startsWith('/assets') ? `${apiUrl}${section.imageUrl}` : section.imageUrl} 
                alt={`Section ${section.order}`} 
                class="history-timeline-img" 
              />
            </div>
          )}
          <div class={`col-lg-7 col-md-9 ${isLeft ? 'offset-lg-0 offset-md-1' : ''} animate__animated ${isLeft ? 'animate__fadeInLeft' : 'animate__fadeInRight'} position-relative`}>
            <div class={`history-timeline-dot d-none d-lg-block`} style={`border-color: ${color}; color: ${color};`}>
              <i class={icon}></i>
            </div>
                          <div class={`history-block ${isLeft ? 'left-block' : 'right-block'} p-4`} style={`border-color: ${color};`}>
                <div class="history-text" style={`color: ${color};`}>
                  <div set:html={section.textContent || ''} />
                </div>
              </div>
          </div>
          {isLeft && (
            <div class="col-lg-2 d-none d-lg-flex justify-content-start">
              <img 
                src={section.imageUrl?.startsWith('/assets') ? `${apiUrl}${section.imageUrl}` : section.imageUrl} 
                alt={`Section ${section.order}`} 
                class="history-timeline-img" 
              />
            </div>
          )}
        </div>
      );
    })}
  </div>
</section>

<style>
  .history-timeline-section {
    background: #ffffff;
    padding-top: 4rem;
    padding-bottom: 4rem;
    position: relative;
  }
  .history-timeline-line {
    position: absolute;
    left: 50%;
    top: 0;
    width: 6px;
    height: 100%;
    background: linear-gradient(180deg, #E23E57 0%, #FC4811 50%, #E09C2B 100%);
    border-radius: 3px;
    opacity: 0.13;
    z-index: 0;
    transform: translateX(-50%);
  }
  .history-timeline-row {
    position: relative;
    min-height: 120px;
  }
  .history-timeline-dot {
    position: absolute;
    top: 50%;
    left: 100%;
    transform: translate(-50%, -50%);
    width: 54px;
    height: 54px;
    border-radius: 50%;
    background: #fff;
    box-shadow: 0 2px 12px 0 rgba(233,30,99,0.08);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    z-index: 2;
    border: 4px solid #E23E57;
  }
  .history-timeline-dot-rose {
    border-color: #E23E57;
    color: #E23E57;
  }
  .history-timeline-dot-orange {
    border-color: #FC4811;
    color: #FC4811;
  }
  .history-timeline-dot-jaune {
    border-color: #E09C2B;
    color: #E09C2B;
  }
  .history-block {
    background: rgba(255,255,255,0.97);
    border-radius: 1.2rem;
    margin-bottom: 0.5rem;
    box-shadow: 0 2px 12px 0 rgba(233,30,99,0.04);
    transition: box-shadow 0.3s;
    border-left: 5px solid #E91E63;
    position: relative;
    z-index: 1;
  }
  .history-block:hover {
    box-shadow: 0 8px 32px 0 #e87c3d20, 0 2px 8px #0001;
  }
  .left-block {
    border-left-width: 5px;
    border-right: none;
  }
  .right-block {
    border-right-width: 5px;
    border-left: none;
  }
  .history-block-rose {
    border-color: #E23E57;
  }
  .history-block-orange {
    border-color: #FC4811;
  }
  .history-block-jaune {
    border-color: #E09C2B;
  }
  .right-block.history-block-orange {
    border-right: 5px solid #FC4811;
    border-left: none;
  }
  .history-text {
    font-size: 1.13rem;
    line-height: 1.8;
    color: #3a3a3a;
    padding: 0.2rem 0.1rem;
  }
  .history-title-nouvoulook {
    display: block;
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  .history-text-rose .history-title-nouvoulook {
    color: #E23E57;
  }
  .history-text-orange .history-title-nouvoulook {
    color: #FC4811;
  }
  .history-text-jaune .history-title-nouvoulook {
    color: #E09C2B;
  }
  .history-text h2, .history-text h3 {
    color: #D52151;
    margin-bottom: 1rem;
  }
  .history-text p {
    margin-bottom: 1rem;
  }
  @media (max-width: 1200px) {
    .history-timeline-dot {
      left: 102%;
    }
  }
  @media (max-width: 900px) {
    .left-block, .right-block {
      border-left-width: 4px;
      border-right-width: 4px;
    }
    .history-block {
      border-radius: 0.8rem;
      padding: 1.2rem;
    }
    .history-timeline-dot {
      width: 40px;
      height: 40px;
      font-size: 1.3rem;
      left: 102%;
    }
  }
  @media (max-width: 600px) {
    .history-block {
      border-radius: 0.5rem;
      padding: 0.8rem;
    }
    .history-timeline-section {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
    .history-timeline-dot {
      display: none !important;
    }
    .history-timeline-line {
      display: none !important;
    }
  }
  .fade-in-scroll {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s ease, transform 0.6s ease;
  }
  .fade-in-scroll.visible {
    opacity: 1;
    transform: translateY(0);
  }
  .history-timeline-img {
    width: 430px;
    height: 330px;
    object-fit: cover;
    border-radius: 16px;
    box-shadow: 0 2px 12px 0 rgba(233,30,99,0.10);
    border: 3px solid #fff;
    background: #f7f8fa;
    margin: 0 0.5rem;
    transition: transform 0.3s, box-shadow 0.3s;
    padding: 1.5rem;
  }
  .history-timeline-img:hover {
    transform: scale(1.07) rotate(-2deg);
    box-shadow: 0 8px 32px 0 #e87c3d20, 0 2px 8px #0001;
  }
</style>

<script is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const els = document.querySelectorAll('.fade-in-scroll');
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('visible');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.2 });
    els.forEach(el => observer.observe(el));
  });
</script>

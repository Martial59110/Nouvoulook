---
export interface Props {
  titre?: string
  texte?: string
  icone?: string
}
const { titre = "Concernant les dons", texte = "", icone = "��" } = Astro.props;

// Convertir les retours à la ligne en <br>
const texteAvecBr = texte.replace(/\n/g, '<br>');
---
<div class="fade-in">
  <h3 class="dons-section-title d-flex align-items-center">
    <span class="dons-icone" aria-hidden="true">{icone}</span>
    {titre}
  </h3>
  <p class="dons-text-content" set:html={texteAvecBr}></p>
</div>

<style>
  .dons-text-content {
    white-space: pre-line;
    line-height: 1.6;
  }
</style> 